<p style="color: green"><%= notice %></p>
<%= turbo_include_tags %>

<h1>Posts</h1>

<%= form_with url: search_path, method: :get do |form| %>
  <%= form.text_field :search, placeholder: "Search posts" %>
  <%= form.submit "Search" %>
<% end %>

<div id="posts">
  <%= render "posts/posts", posts: @posts %>
</div>

<%= link_to "New post", new_post_path %>
